set(arithmetic).
assign(domain_size, 2).
assign(max_models, -1).

% l1: there is a lady in room 1
% l2: there is a lady in room 2
% t1: there is a tiger in room 1
% t2: there is a tiger in room 2
% m1: message on the first door
% m2: message on the second door

formulas(assumptions). 

    % each of the two rooms contain either a lady or a tiger, 
    % but it could be that there were tigers in both rooms.
    l1 & l2 | l1 & t2 | t1 & l2 | t1 & t2. 

    % no tiger in the room where the lady stays
    l1 -> -t1.
    l2 -> -t2.

    % sign on door #1: in this room there is a lady, and in the other room there is a tiger
    m1 <-> l1 & t2.
    
    % sign on door #2: in one of these rooms there is a lady, and in one of these rooms there is a tiger
    m2 <-> (l1 | l2) & (t1 | t2).

    % one of the sign is true, but the other one is false
    m1 <-> -m2.

end_of_list.